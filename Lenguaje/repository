#!/bin/bash
#
#
#
#
#
#
archivo= echo "Primer commit del repositorio" >> README.md 
echo "Â¿Quieres crear un nuevo repositorio?"
read respuesta
commit= read commit
if [[ $respuesta = "si" ]]
then
	echo "Nombre del repositorio: " && read directorio && mkdir $directorio && cd $directorio/ && pwd &&
	$archivo && git add . -A && echo "Nombre del commit: " && git commit -m "$commit"
fi









